<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.TabRecordFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="top|center_horizontal">

        <LinearLayout
            android:id="@+id/goalPanel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/goalTitleTv"
                android:text="@string/goal_title"
                android:textSize="24dp"
                android:textColor="@color/purple"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_marginTop="20dp"/>
            <View
                android:background="@color/using_content"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginHorizontal="20dp"
                android:layout_below="@id/goalTitleTv"
                android:layout_marginTop="15dp"/>
        </LinearLayout>

        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/recordGraphFragment"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginTop="15dp"
            android:layout_below="@id/goalPanel"/>

        <LinearLayout
            android:id="@+id/graphTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_marginTop="20dp"
            android:layout_below="@id/recordGraphFragment">
            <TextView
                android:id="@+id/fitnessGraphTitle"
                android:text="@string/graph_title_fitness"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textAlignment="center"/>
            <TextView
                android:id="@+id/weightGraphTitle"
                android:text="@string/graph_title_weight"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textAlignment="center"/>
        </LinearLayout>

    </RelativeLayout>


</FrameLayout>