<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="hs.capstone.tantanbody">

    <uses-permission android:name="android.permission.INTERNET"/> <!--서버 통신 위해 인터넷 권한 얻음-->

    <application
        android:name=".model.TTBApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.TantanBody"
        android:usesCleartextTraffic="true"> <!--http 접근을 허용하게 함-->

        <activity android:name=".ui.LogInActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.MainActivity"/>

    </application>

</manifest>